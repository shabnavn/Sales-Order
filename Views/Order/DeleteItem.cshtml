
<div class="modal fade" tabindex="-1" id="modal_del_popup"  >
    <div class="modal-dialog" data-backdrop="static" data-keyboard="false">
        <div class="modal-content position-absolute">
            <div class="modal-header">
                <h5 class="modal-title">Delete Item</h5>
                <small class="col-lg-9" style="text-align-last:end">Click anywhere to drag</small>
                <!--begin::Close-->
                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <span class="svg-icon svg-icon-2x"></span>
                </div>
                <!--end::Close-->
            </div>

            <div class="modal-body">
                <h3>Are you sure you want to delete this item?</h3>
                <span id="grdDelItmID" hidden></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">No</button>
                <button type="button" onclick="DeleteItem()" class="btn btn-primary">Yes</button>
                <img id="DeleteLoader" style="display: none;" class="text-center" src="../Content/media/icons/loader.gif" height="38" />
            </div>
        </div>
      
    </div>
</div>

<script>
    function DeleteItem() {
        $('#DeleteLoader').show('slow');

        cusID = $("#Customers").val();
        itmID = $("#grdDelItmID").text();

        $.ajax({
                type: "GET",
                url: '@Url.Action("DeleteItem", "Order")',
                contentType: "application/json; charset=utf-8",
                data: {
                    "itmID": itmID,
                    "cusID": cusID
                },
             dataType: "json",
             success: function (data) {
                 if (data.res == "0") {
                     $('#listPartial').load('/Order/ShowList');

                     var ddlItems = $("#Items").data("kendoMultiColumnComboBox");
                     ddlItems.dataSource.read();
                     ddlItems.focus();

                     $('#DeleteLoader').hide('hide');
                     ShowSummary();
                     toastr.success('Item removed successfully');

                     $('#modal_del_popup').modal('hide');
                 } else {
                     toastr.error(data.err);
                     $('#DeleteLoader').hide('hide');
                 }
             }
               });
    }
</script>